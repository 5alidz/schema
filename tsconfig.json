{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules", "**/*.js"]
}
